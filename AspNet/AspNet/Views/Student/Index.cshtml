@model List<AspNet.Models.Student>
@{
    ViewBag.Title = "Index";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-content-center" >
                <h3>Tələbələr</h3>
                <a href="@Url.Action("Create")"class="btn btn-outline-primary">Yeni Tələbə</a>
            </div>
            <div class="card-body">
                <table class="table">
                    <thead>
                        <tr>
                            <th scope="col">Ad</th>
                            <th scope="col">Soyad</th>
                            <th scope="col">Yaş</th>
                            <th scope="col">Telefon</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model) 
                        {
                        <tr>
                            <td>@item.Name</td>
                            <td>@item.Surname</td>
                            <td>@item.Age</td>
                            <td>@item.Phone</td>
                            <td>
                                <a href="@Url.Action("edit",new {id = item.Id })" >
                                    <i class="fas fa-pencil-alt"></i>
                                </a>
                                <a onclick="return confirm('Are you sure?')" href="@Url.Action("delete",new {id = item.Id }) "class="text-danger">
                                    <i class="fas fa-trash"></i>
                                </a>
                               
                            </td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
